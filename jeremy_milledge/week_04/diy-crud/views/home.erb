
<main>
  <% @ideas.shuffle.each do |x| %>
    <article class="<%= x['category'] %> tile">
      <h2><a href="idea/<%= x['id'] %>" alt="<%= x['title'] %>"><%= x['title'] %></a></h2>
      <div class="info">

        <div class="meta">
          <img src="/img/tag-icon.png" class="icon-x-small">
          <p><%= x['category'] %></p>
        </div>
        <div class="meta">
          <img src="/img/date-icon.png" class="icon-x-small">
          <p><%= x['post_time'] %></p>
        </div>
      </div>
      <h4>Description</h4>
      <p class="copy"><%= x['description'] %></p>
      <h4>Related Links</h4>
      <% x['links'].each_with_index do |y, i| %>
        <p><a class="related" href="<%= y %>" alt="<%=x['title'] %> related link number <%= i + 1 %>" target="_blank"><%= y %></a></p>
      <% end %>
    </article>
  <% end %>
</main>
