<div class="idea-header">
  <img class="icon-small" src="/img/bulb-icon.png" alt="Bulb icon">
  <h2 class="idea-single">bright idea</h2>
</div>
<div class="form-container">
  <form action="/" method="post" class="new">
    <label>
      <p>title</p>
      <input name="title" placeholder="flying car" required>
    </label>
    <label>
      <p>category</p>
      <!-- <input name="category" placeholder="transport" required> -->
      <select class="" name="category" placeholder="select..." required>
        <option value="">select...</option>
        <% @cats.each do |c| %>
          <option value="<%= c %>"><%= c %></option>
        <% end %>
      </select>
    </label>
    <label>
      <p>description</p>
      <textarea name="description" placeholder="to fly with my car"></textarea>
    </label>
    <div class="center">
      <a href="/" class="link-btn big-btn">home</a>
      <button type="submit" class="link-btn big-btn new-btn">add idea</button>
    </div>

  </form>
</div>
