<%= link_to "Back", producers_path %>

<h1><%= @producer.name %></h1>

<% if @producer.foundation_year.present? %>
<h3>Founded in <%= @producer.foundation_year %>.</h3>
<% end %>

<%= image_tag @producer.logo, :class => 'feature', :alt => @producer.name %>

<% if @producer.animations.present? %>
  <h2>Animations</h2>

  <% @producer.animations.each do |animation| %>
    <%= link_to image_tag(animation.image, :class => "thumb", :alt => animation.title), animation %>
  <% end %>

<% end %>

<div class="controls">

  <%= link_to "Edit studio", edit_producer_path(@producer) %>
  <%= link_to "Delete studio", @producer, :method => "delete", :data => {:confirm => "Are you sure you want to delete #{@producer.name}"} %>

</div>
