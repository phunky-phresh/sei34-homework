<h2>New Mountain</h2>

<form action="<%= mountains_path %>" method="post">

  <label>
    Name:
    <input type="text" name="name">
  </label>

  <label>
    Image:
    <input type="url" name="image">
  </label>

  <label>
    Continent:
    <input type="text" name="continent">
  </label>

  <label>
    Countries:
    <input type="text" name="countries">
  </label>

  <label>
    Length (kms):
    <input type="number" name="length">
  </label>

  <label>
    Elevation (meters):
    <input type="number" name="elevation">
  </label>

  <button>Create mountain</button>
</form>
