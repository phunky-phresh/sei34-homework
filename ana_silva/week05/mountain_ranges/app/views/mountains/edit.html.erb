<h2>Edit Mountain</h2>

<form action="<%= mountain_path(@mountain.id) %>" method="post">

  <label>
    Name:
    <input type="text" name="name" value="<%= @mountain.name  %>">
  </label>

  <label>
    Image:
    <input type="url" name="image" value="<%= @mountain.image  %>">
  </label>

  <label>
    Continent:
    <input type="text" name="continent" value="<%= @mountain.continent  %>">
  </label>

  <label>
    Countries:
    <input type="text" name="countries" value="<%= @mountain.countries  %>">
  </label>

  <label>
    Length (kms):
    <input type="number" name="length" value="<%= @mountain.length.to_i  %>">
  </label>

  <label>
    Elevation (meters):
    <input type="number" name="elevation" value="<%= @mountain.elevation.to_i  %>">
  </label>

  <button>Update</button>
</form>
