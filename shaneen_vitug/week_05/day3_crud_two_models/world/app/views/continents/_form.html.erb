<%= form_for @continent do |f| %>

<%= f.submit :class => 'btn btn-success' %>

<div class="row">
  <div class="col">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
  </div>
  <div class="col">
    <%= f.label :size %>
    <%= f.number_field :size, :class => 'form-control' %>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= f.label :population %>
    <%= f.number_field :population, :class => 'form-control' %>
  </div>
  <div class="col">
    <%= f.label :numofcountries, "Number of countries" %>
    <%= f.number_field :numofcountries, :class => 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :fact %>
  <%= f.text_area :fact, :class => 'form-control', :size => '3x3' %>
</div>
<div class="form-group">
  <%= f.label :image %>
  <%= f.url_field :image, :class => 'form-control' %>
</div>

<% end %>
