<h2>Edit <%= @beer.name %></h2>

<form action="/beers/<%= @beer.id %>" method="post">
	<label>
		<p>Name:</p>
		<input type="text" placeholder="Name" value="<%= @beer.name %>" name="name" required>
	</label>
	<label>
		<p>Percentage (without "%"):</p>
		<input type="number" step="0.1" placeholder="4.6" value="<%= @beer.percentage %>" name="percentage">
	</label>
	<label>
		<p>Image:</p>
		<input type="text" placeholder="http://..." value="<%= @beer.image %>" name="image">
	</label>
	<label>
		<p>Type of beer:</p>
		<select name="type_id">
			<option></option>
			<% Type.all.each do |type| %>
				<option value="<%= type.id %>" <%= "selected" if type.id == @beer.type_id %>><%= type.name %></option>
			<% end %>
		</select>
	</label>

	<button>Update beer</button>
</form>