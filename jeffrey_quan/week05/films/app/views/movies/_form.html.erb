<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true, :autofocus => true %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :year, "Year in theatres" %>
  <%= f.text_field :year, :placeholder => 'YYYY' %>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
  <%= f.label :director_id %>
  <%= f.select :director_id, Director.pluck(:name, :id), :include_blank => true %>
  <%= f.submit %>
<% end %>
