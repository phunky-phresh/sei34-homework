<h2>Submit a Profile</h2>

<div class="form">
  <form action="/profiles" method="post">
    <label>
      <h3>Name:</h3>
      <input name="name" placeholder="eg. Camber" required>
    </label>

    <label>
      <h3>Experience Level:</h3>
      <input name="skill" placeholder=" eg. beginner">
    </label>
    <label>
      <h3>Image:</h3>
      <input name="image" type="url" placeholder="https://...">
    </label>
    <label>
      <h3>Board Shape:</h3>
      <select name="shape_id">
        <option></option>
        <% Shape.all.each do |shape| %>
          <option value="<%= shape.id %>"><%= shape.name %></option>
        <% end %>
        <option>Multiple</option>
      </select>
    </label>
    <label>
      <textarea name="description" rows="8" cols="80" placeholder="Give a brief overivew"></textarea>
      <!-- <input name="description"> -->
    </label>
    <button>Submit</button>
  </form>
</div>
