<div class="display">
  <h2><%= @profiles.name %></h2>

  <p><%= @profiles.skill %></p>

  <% unless @profiles.shape.nil? %>
  <p>
    Shape:
    <a href="/shapes/<%= @profiles.shape_id %>">
      <%= @profiles.shape.name %>
    </a>
  </p>

  <% end %>
  <p><%= @profiles.description %></p>



  <% unless @profiles["image"].nil? || @profiles["image"].empty? %>
    <img class="feature" src="<%= @profiles["image"] %>" alt="<%= @profiles["name"] %>">
  <% end %>

  <div class="controls">
    <a href="/profiles/<%= @profiles["id"] %>/edit">Edit</a>
    <a href="/profiles/<%= @profiles["id"] %>/delete">Delete</a>

  </div>
</div>
