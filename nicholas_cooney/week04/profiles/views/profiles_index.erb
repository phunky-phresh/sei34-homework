<div class="content">
  <h2>Profiles</h2>


  <table class="index">
    <tr>
      <th>Snowboard Profile</th>
      <th>Rider Level</th>
      <th>Snowboard Shape</th>
    </tr>

    <% @profiles.each do |profile| %>
    <tr>
      <td>
        <a href="/profiles/<%= profile["id"] %>">
        <%= profile["name"] %>
      </td>
      <td>
        <%= profile["skill"] %>
      </td>
      <td>
        <% Shape.all.each do |shape| %>
        <% if profile.shape_id == shape.id %>
        <a href="/shapes/<%= shape.id %>"><%= shape.name %></a>
        
        <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>


  </table>

</div>
